{% extends 'partials/base.html.twig' %}

{% block hero %}
    {% set hero_heading = page.header.hero.heading|default(page.header.title) %}
    {% set hero_context = page.header.hero|merge({'heading': hero_heading}) %}
    {{ include('partials/hero.html.twig', hero_context) }}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        {{ page.content|raw }}
    </div>
{% endblock %}
