<header id="page-header">
    <nav class="navbar navbar-expand navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img alt="{{ site.title }}" src="{{ url('theme://images/logo.svg') }}" width="310" height="54">
            </a>
            {% if page.children.visible|length > 0 %}
                <ul class="navbar-nav">
                    {% for p in pages.children.visible %}
                        {% set active_page = (p.active or p.activeChild) ? true : false %}
                        {% set nav_item_classes = 'nav-item' %}
                        {% set nav_link_classes = 'nav-link' ~ (active_page ? ' active' : '') %}
                        {% set nav_link_aria = active_page ? 'aria-current="page"' : '' %}
                        <li class="{{ nav_item_classes }}">
                            <a href="{{ p.url }}" class="{{ nav_link_classes }}" {{ nav_link_aria }}>
                                {{ p.menu }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            <a href="#request-a-quote" class="btn btn-primary">Request a quote</a>
        </div>
    </nav>
</header>
