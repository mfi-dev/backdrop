{% extends 'partials/module.html.twig' %}

{% set body_classes = page.header.body_classes ~ ' animation-module animation-module--cube rhythm container-fluid' %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-lg-6">
            {% if page.title %}
                <h2 class="module__heading">{{ page.title|e('html') }}</h2>
            {% endif %}
            {{ content|raw }}
        </div>
    </div>
{% endblock %}
